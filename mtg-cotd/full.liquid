<div class="layout">
  <div class="column h--auto w--72"> 
      {% if IDX_0.card_faces and IDX_0.card_faces[0].image_uris %}
        {% assign png = IDX_0.card_faces[0].image_uris.png %}
      {% else %}
        {% assign png = IDX_0.image_uris.png %}
      {% endif %}
      <img class="image image-dither" style="transform: scale(0.75);" src="{{ png }}">
  </div>
  <div class="column w--auto">
  {% if IDX_0.card_faces %}
    <span class="title">{{ name }}</span>
    {% for card in IDX_0.card_faces %}
      {% render "card_face", name: card.name, mana_cost: card.mana_cost, type_line: card.type_line, oracle_text: card.oracle_text, flavor_text: card.flavor_text, power: card.power, toughness: card.toughness, loyalty: card.loyalty, artist: card.artist, faces: true %}
    {% endfor %}
  {% else %}
    {% render "card_face", name: IDX_0.name, mana_cost: IDX_0.mana_cost, type_line: IDX_0.type_line, oracle_text: IDX_0.oracle_text, flavor_text: IDX_0.flavor_text, power: IDX_0.power, toughness: IDX_0.toughness, loyalty: IDX_0.loyalty, artist: IDX_0.artist %}
  {% endif %}
    <span class="description clamp--none">{{ rarray[0]|upcase }} {{ cn }} / {{ IDX_0.set | upcase }}
      <br><br> EDHRec Rank: {{ IDX_0.edhrec_rank }}
      <br> Price: ${{ IDX_0.prices.usd }} / â‚¬{{ IDX_0.prices.eur }} </span>
  </div>
</div>
{% render "title_bar", trmnl: trmnl, instance: IDX_0.name %}
